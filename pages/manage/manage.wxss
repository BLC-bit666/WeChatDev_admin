/* pages/orders/orders.wxss */
/* order.wxss */
.order-page {
  padding: 20rpx;
}


.order-title {
  font-size: 16px;
  font-weight: bold;
}

.order-tabs {
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

.order-tab {
  padding: 10rpx 20rpx;
  font-size: 14px;
  color: #666666;
  cursor: pointer;
}

.order-tab:not(.active):hover {
  color: #FF0000;
}

.order-tab.active {
  color: #FF0000;
  font-weight: bold;
}

.order-list {
  margin-top: 20rpx;
}

.order-item {
  padding: 10rpx;
  background-color: #FFFFFF;
  margin-bottom: 10rpx;
  border-radius: 5rpx;
  display: flex;
}

.order-item-title {
  font-size: 16px;
  color: #333333;
  margin-right: auto;
}

.order-item-status {
  font-size: 12px;
  color: #999999;
  margin-left: auto;
  border: 1px solid black;
  padding: 5px;
}

/* 厨师列表页面样式 */
.chef-list {
  padding: 20rpx;
}
.chef-item {
  display: flex;
  height:70rpx;
  align-items: center;
  padding: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
  cursor: pointer;
}
.chef-name {
  font-size: 25rpx;
  font-weight: bold;
  margin-right: 40rpx;
  margin-left: 40rpx;
}

.chef-specialty {
  font-size: 20rpx;
  margin-right: 80rpx;
  margin-left: 80rpx;
  color: #666;
}
.chef-status {
  font-size: 20rpx;
  margin-left: 80rpx;
  color: #666;
}
/* 食材页面样式 */
.ingredients-page {
  padding: 20rpx;
}

.ingredient-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
}

.ingredient-name {
  font-size: 25rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.ingredient-quantity,
.ingredient-expiry {
  font-size: 20rpx;
  color: #666;
}

/* 订单页面样式 */
.orders-page {
  padding: 20rpx;
}

.order-item {
  padding: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
}

.order-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.id {
  font-size: 25rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.chef,
.meal,
.amount,
.completion-time,
.customer-nickname {
  font-size: 20rpx;
  color: #666;
}

/* 用户列表页面样式 */
.user-list-page {
  padding: 20rpx;
}

.user-item {
  display: flex;
  align-items: center;
  height: 70rpx;
  padding: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.account {
  font-size: 18rpx;
  font-weight: bold;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.credit{
  font-size: 18rpx;
  margin-left: 70rpx;
  margin-right: 70rpx;
  color: #666;
}
.appointment {
  font-size: 18rpx;
  margin-left: 60rpx;
  color: #666;
}



