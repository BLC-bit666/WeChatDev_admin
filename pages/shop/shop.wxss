/* 食材商城页面样式 */
.market-page {
  padding: 20rpx;
}

.ingredient-block {
  margin-bottom: 20rpx;
}

.block-title {
  font-size: 16rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.ingredient-list {
  display: flex;
  flex-wrap: wrap;
}

.ingredient-item {
	width: 45%;
  padding: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ingredient-image {
  width: 280rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 5rpx;
}

.ingredient-name {
  font-size: 14rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}
