/* 登录页面样式 */
.login-page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.login-form {
  padding: 20rpx;
  width: 60%;
  background-color: rgba(255, 255, 255, 0.8);
  margin-top: 350rpx;
  border-radius: 10rpx;
}

.title {
  font-size: 20rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  padding: 10rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.button {
  width: 100%;
  padding: 10rpx;
  background-color: #ffb8c6;
  color: rgb(0, 0, 0);
  border: none;
  border-radius: 5rpx;
  font-size: 16rpx;
}
